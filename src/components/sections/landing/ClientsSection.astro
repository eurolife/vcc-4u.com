---
import { Image } from 'astro:assets';
// Define props from Astro
const { title, subTitle, clients } = Astro.props;

// Define TypeScript interface for props
interface Props {
  title: string;
  subTitle?: string;
  clients: any;
}
---

<section
  class="mx-auto max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 2xl:max-w-full"
>
  <!-- Title and description -->
  <div class="mx-auto mb-6 w-full space-y-1 text-center sm:w-1/2 lg:w-1/3">
    <h2
      class="text-balance text-2xl font-bold leading-tight text-neutral-800 dark:text-neutral-200 md:text-4xl"
    >
      {title}
    </h2>
    {
      subTitle && (
        <p class="text-pretty leading-tight text-neutral-600 dark:text-neutral-400">
          {subTitle}
        </p>
      )
    }
  </div>
  <!-- <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 lg:gap-16"> -->
  <div class="grid lg:grid-cols-2 gap-8 lg:gap-16">
    {
      clients &&
        clients.map((client: any, index: number) => (
          <div class="text-black dark:text-white">
            {client.logo ? (
              <Image
                src={client.logo}
                alt={`${client.name} logo`}
                draggable={'false'}
                format={client.logoType}
                loading={'eager'}
                class="mr-auto"
              />
            ) : (
              <h1 class="text-xl font-bold">{client.name}</h1>
            )}

            <p class="mt-4 text-neutral-600 dark:text-neutral-400">
              {client.description}
            </p>
          </div>
        ))
    }
  </div>
  <!-- <div
    class="flex flex-col items-center justify-center gap-y-2 sm:flex-row sm:gap-x-12 sm:gap-y-0 lg:gap-x-24"
  ></div> -->
</section>

<style>
  img,
  svg {
    width: 280px !important;
  }
</style>
